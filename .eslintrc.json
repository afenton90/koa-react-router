{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "plugins": ["react", "import", "jest"],
  "rules": {
    "comma-dangle": 0,
    "react/prop-types": 0,
    "no-console": 0,
    "arrow-parens": 0,
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true,
        "optionalDependencies": false,
        "peerDependencies": false
      }
    ],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "no-param-reassign": 0,
    "react/no-danger": 0
  },
  "env": {
    "jest/globals": true
  }
}
